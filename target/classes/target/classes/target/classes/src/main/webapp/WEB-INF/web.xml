<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <include-prelude>/WEB-INF/TagLib.jsp</include-prelude>

        </jsp-property-group>
    </jsp-config>


    <!--Declaration Servlet -->

    <!--ADD LECTEUR -->
    <servlet>
        <servlet-name>AddLecteurServlet</servlet-name>
        <servlet-class>com.e_Ndrana.servlet.AddLecteurServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AddLecteurServlet</servlet-name>
        <url-pattern>/add_Lecteur</url-pattern>
    </servlet-mapping>
    <!---->

    <!--LIST LECTEUR -->
    <servlet>
        <servlet-name>ListLecteurServlet</servlet-name>
        <servlet-class>com.e_Ndrana.servlet.ListLecteurServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ListLecteurServlet</servlet-name>
        <url-pattern>/list_Lecteur</url-pattern>
    </servlet-mapping>
    <!---->

    <!--ADD BOOK -->
    <servlet>
        <servlet-name>AddBookServlet</servlet-name>
        <servlet-class>com.e_Ndrana.servlet.AddBookServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddBookServlet</servlet-name>
        <url-pattern>/add_Ouvrage</url-pattern>
    </servlet-mapping>
    <!---->

    <!--LIST BOOK -->
    <servlet>
        <servlet-name>ListBookServlet</servlet-name>
        <servlet-class>com.e_Ndrana.servlet.ListBookServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ListBookServlet</servlet-name>
        <url-pattern>/list_Ouvrage</url-pattern>
    </servlet-mapping>
    <!---->

    <!--MON COMPTE -->
    <servlet>
        <servlet-name>MonCompteServlet</servlet-name>
        <servlet-class>com.e_Ndrana.servlet.MonCompteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MonCompteServlet</servlet-name>
        <url-pattern>/MonCompte</url-pattern>
    </servlet-mapping>
    <!---->

    <!--MON COMPTE -->
    <servlet>
        <servlet-name>PretServlet</servlet-name>
        <servlet-class>com.e_Ndrana.servlet.PretServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PretServlet</servlet-name>
        <url-pattern>/list_Pret</url-pattern>
    </servlet-mapping>
    <!---->

    <!--MON COMPTE -->
    <servlet>
        <servlet-name>E_NdranaChartServlet</servlet-name>
        <servlet-class>com.e_Ndrana.servlet.E_NdranaChartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>E_NdranaChartServlet</servlet-name>
        <url-pattern>/statistique</url-pattern>
    </servlet-mapping>
    <!---->


</web-app>